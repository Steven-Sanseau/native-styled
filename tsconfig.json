{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "target": "es5",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "lib",
    "baseUrl": "./"
  },
  "compileOnSave": true,
  "exclude": ["node_modules"],
  "include": ["./src/*"]
}
